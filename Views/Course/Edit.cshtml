@model Course

<h2>Course Update</h2>
<hr>
<div class="row">
    <div class="col-8">
    <form asp-asp-controller="Course" asp-action="Edit" method="post">
    <input type="hidden" asp-for="CourseId">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"> Course name</label>
        <input asp-for="Title" class="form-control">
    </div>
   
    <button type="submit" class="btn btn-secondary">Save</button>
</form>
</div>
<div class="col-4">
    <h4>Students</h4>
    <hr>
    <ul>
        @foreach( var item in @Model.CourseRegistrations)
        {
            <li>@item.Student.NameLastName</li>
        }
    </ul>
</div>

</div>

