@model IEnumerable<CourseRegistration>

<h2>Student List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m =>m.RegistrationId)</th>
            <th>@Html.DisplayNameFor(m =>m.Student.StudentName)</th>
            <th>@Html.DisplayNameFor(m =>m.Course.Title)</th>
            <th style="width: 150px;"></th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RegistrationId)</td>
                <td>@Html.DisplayFor(modelItem => item.Student.StudentName)</td>
                <td>@Html.DisplayFor(modelItem => item.Course.Title)</td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.StudentId"  class="btn btn-sm btn-primary">Edit</a>
                        <a  asp-action="Delete" asp-route-id="@item.StudentId"  class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>