@model Student

<p>
    <b>@Model.StudentName @Model.StudentLastName</b> do you want to delete the named student?

<form  asp-action="Delete" method="post">
    <input type="hidden" value="@Model.StudentId" name="id" >
    <button type="submit" class="btn btn-danger">Yes</button>
    <a asp-action="Index" class="btn btn-primary">No</a>
</form>

</p>